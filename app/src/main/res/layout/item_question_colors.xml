<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/message_min_column_space"
        android:layout_marginTop="@dimen/normal_margin"
        android:background="@drawable/bg_question"
        android:elevation="@dimen/message_elevation"
        android:minWidth="@dimen/message_min_width"
        android:orientation="vertical"
        android:padding="@dimen/message_inner_margin">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:textAppearance="?android:textAppearanceMedium" />

        <com.woalk.apps.resistorassistant.ResistorView
            android:id="@+id/resistor1"
            android:layout_width="@dimen/resistor_small_default_width"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
