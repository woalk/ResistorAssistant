<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_resistor_small_dent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="36"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <View
        android:layout_width="@dimen/resistor_small_dent_margin"
        android:layout_height="@dimen/resistor_small_height"
        android:layout_weight="0"
        android:background="@drawable/bg_resistor_bump" />

    <View
        android:id="@+id/view_color1"
        android:layout_width="0dp"
        android:layout_height="@dimen/resistor_small_dent_height"
        android:layout_weight="4"
        android:background="@color/resistorColor" />

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

    <View
        android:id="@+id/view_color2"
        android:layout_width="0dp"
        android:layout_height="@dimen/resistor_small_dent_height"
        android:layout_weight="4"
        android:background="@color/resistorColor" />

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

    <View
        android:id="@+id/view_color3"
        android:layout_width="0dp"
        android:layout_height="@dimen/resistor_small_dent_height"
        android:layout_weight="4"
        android:background="@color/resistorColor" />

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

    <View
        android:id="@+id/view_color4"
        android:layout_width="0dp"
        android:layout_height="@dimen/resistor_small_dent_height"
        android:layout_weight="4"
        android:background="@color/resistorColor" />

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4" />

    <View
        android:id="@+id/view_color5"
        android:layout_width="0dp"
        android:layout_height="@dimen/resistor_small_dent_height"
        android:layout_weight="4"
        android:background="@color/resistorColor" />

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

    <View
        android:id="@+id/view_color6"
        android:layout_width="0dp"
        android:layout_height="@dimen/resistor_small_dent_height"
        android:layout_weight="4"
        android:background="@color/resistorColor" />

    <View
        android:layout_width="@dimen/resistor_small_dent_margin"
        android:layout_height="@dimen/resistor_small_height"
        android:layout_weight="0"
        android:background="@drawable/bg_resistor_bump" />
</LinearLayout>