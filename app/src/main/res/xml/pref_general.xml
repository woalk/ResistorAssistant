<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="assistant"
        android:title="@string/pref_category_assistant">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="assistant_tts"
            android:summary="@string/pref_assistant_tts_message"
            android:title="@string/pref_assistant_tts_title"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="info"
        android:title="@string/pref_category_info">

        <Preference
            android:key="info_version"
            android:title="@string/pref_info_version_title"/>

        <Preference
            android:key="info_authors"
            android:summary="@string/pref_info_authors_message"
            android:title="@string/pref_info_authors_title"/>

        <Preference
            android:key="info_license"
            android:summary="@string/pref_info_license_message"
            android:title="@string/pref_info_license_title"/>

        <Preference
            android:key="info_repo"
            android:summary="@string/pref_info_repo_message"
            android:title="@string/pref_info_repo_title"/>

        <Preference
            android:key="info_build_date"
            android:title="@string/pref_info_build_date_title"/>

        <Preference
            android:key="info_commit"
            android:title="@string/pref_info_commit_title"/>
    </PreferenceCategory>

</PreferenceScreen>
